<!-- Home for the content managers -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BashDB Broadcast</title>
    <link rel="icon" href="/images/logo.png" type="image/png">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/navigation.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="navigation.js" defer></script>
    <script src="headerFooterManager.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="home.js" defer></script>
    <link rel="icon" href="images/logo.png" type="image/png">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>
</head>
<body>
    <special-header></special-header>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="navBtns">
            <a href="home"><i class='bx bx-home-alt' ></i> Home</a>
            <a href="timeline"><i class='bx bx-edit-alt' ></i>Queue Videos</a>
            <a href="history"><i class='bx bx-history' ></i> History logs</a>
        </div>
        <form action="logout" method="post" class="logout-form">
            <button type="submit" class="logout-btn"><i class='bx bx-log-out'></i> Log-out</button>
        </form>
    </div>
    <span class="open" onclick="openNav()"><i class='bx bx-menu'></i></span>
    <div id="main">
        <section id="video-section">
            <div class="video">
                <video id="mainVideo" autoplay controls></video>
                <button id='stream-button'>Go live</button>
                <button id='end-button'>End stream</button>
            </div>
            <div class="video-recorded">
                <video id="recordedVideo" autoplay controls></video>
                <button id='stream-recorded-video-button'>Start Video Stream</button>
            </div>
        </section>
        <section id="'current-streamers">
            <div id="activeStreamsContainer">
                No streams currently active!
            </div>
            <button id="loadActiveStreamsButton">Load Active Streams</button>
        </section>
    </div>
    <special-footer></special-footer>
</body>
</html>
